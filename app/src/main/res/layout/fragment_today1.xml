            <ListView android:id="@+id/list" android:layout_width="wrap_content"

                android:background="@drawable/card_background"
                android:layout_height="700dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp" />
        </RelativeLayout>
