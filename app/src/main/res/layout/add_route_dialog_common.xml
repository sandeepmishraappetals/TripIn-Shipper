<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    style="?attr/cardStyle"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@android:color/white"
    android:layout_marginLeft="20dp"
    android:layout_marginTop="10dp"
    android:layout_marginRight="20dp"
    android:foreground="#00000000"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <tripin.com.tripin_shipper.widget.TextViewLatoRegular
            android:id="@+id/firstLineTV"
            android:textSize="@dimen/MEDIUM"
            android:layout_marginTop="12dp"
            android:textColor="@android:color/darker_gray"
            android:gravity="center_horizontal"
            android:text="Where do you want transport from"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <tripin.com.tripin_shipper.widget.TextViewLatoRegular
            android:id="@+id/secondLineTV"
            android:layout_marginTop="34dp"
            android:textSize="@dimen/MEDIUM"
            android:textColor="@android:color/holo_blue_light"
            android:gravity="center_horizontal"
            android:layout_marginBottom="17dp"
            android:text="ADD CONSGNER ADDRESS"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </RelativeLayout>


</android.support.v7.widget.CardView>