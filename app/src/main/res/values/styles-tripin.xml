    <style name="GoogleSignInButton">
        <item name="android:background">@mipmap/continuewithgoogle</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/font_14sp</item>
        <item name="android:paddingLeft">@dimen/_60dp</item>
        <item name="android:paddingRight">@dimen/_60dp</item>
        <item name="android:layout_marginBottom">@dimen/_8dp</item>
    </style>

    <style name="TurnerSignInButton">
        <item name="android:background">@mipmap/button_common</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/font_14sp</item>
